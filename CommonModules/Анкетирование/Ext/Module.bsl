	"ВЫБРАТЬ
	|	ВопросыДляАнкетирования.Ссылка КАК Вопрос,
	|	ВопросыДляАнкетирования.ВидКонтактнойИнформации КАК ВидКИ,
	|	ВопросыДляАнкетирования.ВидКонтактнойИнформации.Тип КАК ТипКИ
	|ИЗ
	|	ПланВидовХарактеристик.ВопросыДляАнкетирования КАК ВопросыДляАнкетирования
	|ГДЕ
	|	ВопросыДляАнкетирования.Ссылка В(&СписокВопросов)
	|	И ВопросыДляАнкетирования.ВидКонтактнойИнформации.Тип <> ЗНАЧЕНИЕ(Перечисление.ТипыКонтактнойИнформации.ПустаяСсылка)";
	
	ТаблицаКИ = Запрос.Выполнить().Выгрузить();
	ТаблицаКИ.Индексы.Добавить("Вопрос");
	
	Для Каждого ТекущийВопрос Из Опрос.Вопросы Цикл
		
		Ответ = ТекущийВопрос.ТиповойОтвет;
		
		Если ТекущийВопрос.Вопрос = ПланыВидовХарактеристик.ВопросыДляАнкетирования.Гражданство Тогда
			// ничего не делать, в гражданстве спрашивается только страна
			
		// в качестве условий можно добавлять разбор табличных вопросов
		ИначеЕсли ТекущийВопрос.Вопрос = ПВХ.ТЗнаниеЯзыков Тогда
			ЗаполнитьТабличнуюЧастьПоОпросу(ФизическоеЛицо, Опрос, ТекущийВопрос.Вопрос, "ФизическиеЛица", "ЗнаниеЯзыков");
			
		ИначеЕсли ТекущийВопрос.Вопрос = ПВХ.ТОбразование Тогда
			ЗаполнитьТабличнуюЧастьПоОпросу(ФизическоеЛицо, Опрос, ТекущийВопрос.Вопрос, "ФизическиеЛица", "Образование");
			
		ИначеЕсли ТекущийВопрос.Вопрос = ПВХ.ТСоставСемьи Тогда
			ЗаполнитьТабличнуюЧастьПоОпросу(ФизическоеЛицо, Опрос, ТекущийВопрос.Вопрос, "ФизическиеЛица", "СоставСемьи");
			
		ИначеЕсли ТекущийВопрос.Вопрос = ПВХ.ТТрудоваяДеятельность Тогда
			ЗаполнитьТабличнуюЧастьПоОпросу(ФизическоеЛицо, Опрос, ТекущийВопрос.Вопрос, "ФизическиеЛица", "ТрудоваяДеятельность");
			
		Иначе
			НайденнаяСтрока = ТаблицаКИ.Найти(ТекущийВопрос.Вопрос, "Вопрос");
			
			Если НайденнаяСтрока <> Неопределено Тогда // Вопрос - КИ
				ЗаполнитьКонтактнуюИнформациюПоОпросу(ФизическоеЛицо, Опрос, ТекущийВопрос.Вопрос, ТекущийВопрос.Раздел, НайденнаяСтрока.ВидКИ, НайденнаяСтрока.ТипКИ);
				
			Иначе
				Элемент = Форма.ЭлементыФормы.Найти(ПланыВидовХарактеристик.ВопросыДляАнкетирования.ПолучитьИмяПредопределенного(ТекущийВопрос.Вопрос));
				Если ТекущийВопрос.Вопрос.Предопределенный И Элемент <> Неопределено Тогда
					Элемент.Значение = Ответ;
				КонецЕсли;
				
			КонецЕсли;
		КонецЕсли;
		
	КонецЦикла;
	
	Если Не ПустаяСтрока(Форма.Фамилия) И Не ПустаяСтрока(Форма.Имя) Тогда
		Форма.Наименование		= Форма.Фамилия + " " + Форма.Имя + " " + Форма.Отчество;
	КонецЕсли;
	
КонецПроцедуры


Функция ПолучитьПредставлениеКИ(ТипКИ, ЗначениеКИ) Экспорт
	
	Если ТипКИ = Перечисления.ТипыКонтактнойИнформации.Адрес тогда
		МассивПолей = ОбщегоНазначенияЗК.РазложитьСтрокуВМассивПодстрок(ЗначениеКИ, "¤");
		
		Представление = УправлениеКонтактнойИнформацией.ПолучитьПредставлениеАдресаПоСтрока(СтрЗаменить(ЗначениеКИ, "¤", ","));
		
		Возврат Представление;
		
	ИначеЕсли ТипКИ = Перечисления.ТипыКонтактнойИнформации.Телефон тогда
		МассивПолей = ОбщегоНазначенияЗК.РазложитьСтрокуВМассивПодстрок(ЗначениеКИ, "¤");
		Если МассивПолей.Количество() > 0 тогда
			Поле1 = МассивПолей[0];
		КонецЕсли;
		Если МассивПолей.Количество() > 1 тогда
			Поле2 = МассивПолей[1];
		КонецЕсли;
		Если МассивПолей.Количество() > 2 тогда
			Поле3 = МассивПолей[2];
		КонецЕсли;
		Если МассивПолей.Количество() > 3 тогда
			Поле4 = МассивПолей[3];
		КонецЕсли;
		Если МассивПолей.Количество() > 4 тогда
			Коммент = МассивПолей[4];
		КонецЕсли;
		Предст = ""+?(Не ПустаяСтрока(Поле1),("+"+Поле1),"");
		Предст = Предст + ?((Не ПустаяСтрока(Поле2)),(УправлениеКонтактнойИнформацией.ПроверкаПустойСтроки(Предст,Ложь)+"(" + Поле2 + ")"),"");
		Предст = Предст + ?((Не ПустаяСтрока(Поле3)),(УправлениеКонтактнойИнформацией.ПроверкаПустойСтроки(Предст,ПустаяСтрока(Поле2))+Поле3),"");
		Предст = Предст + ?((Не ПустаяСтрока(Поле4)),(УправлениеКонтактнойИнформацией.ПроверкаПустойСтроки(Предст)+"доб. " + Поле4),"");
		Предст = Предст + ?((Не ПустаяСтрока(Коммент)),(УправлениеКонтактнойИнформацией.ПроверкаПустойСтроки(Предст)+" " + Коммент),"");
		
		Возврат Предст;
		
	КонецЕсли;
	
	Возврат "";
	
КонецФункции

